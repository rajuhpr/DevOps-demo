pipeline {
  agent {
    docker { image 'node:16-alpine' }
  }
  stages {
    stage('Git-checkout') {
      steps {
        sh 'echo passed'
      }
    }
    stage('maven build') {
      steps {
        sh 'java-project && mvn clean package'
        echo 'maven build works!'
      }
    }
  }
}

